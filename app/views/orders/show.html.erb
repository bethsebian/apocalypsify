<h1><%= "Order ##{"%07d" % @order.id.to_s}" %></h1>

<table class="bordered striped highlight centered responsive-table">
  <thead>
    <tr>
      <th data-field="Item Title">Item Title</th>
      <th data-field="Item Quantity">Item Quantity</th>
      <th data-field="Item Total">Item Total</th>
      <th data-field="Order Status">Order Status</th>
      <th data-field="TotalPrice">Total Price</th>
      <th data-field="CreatedAt">Date Ordered</th>
    </th>
  </tr>
</thead>
<tbody>
  <%= render partial: "partials/order_items", collection: @items, as: :order_item, locals: {order: @order} %>
</tbody>
</table>
